.page{
  background-color: #FAFAFA;
  height: 100%;
}
.order_card{
  margin: 5px 5px;
  background-color: white;
}
.order_card_top{
  display: flex;
  justify-content: space-between;
  margin: auto 5px;
}
.order_date{
  color: #999;
  font-size: 28rpx;
}

.order_state{
  color: red;
  font-size: 28rpx;
}
.shop_cart{
  background-color: white !important;
}

.order_card_down{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 5px 5px;
}


.order_card_totalPrice{
  color: #E65100;
}

